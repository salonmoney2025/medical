# ============================================================
# Student Medical Records System - Environment Variables
# ============================================================
# Copy this file to .env.local for local development

# Database Configuration
# Option 1: Use DATABASE_URL (recommended for Railway and other cloud MySQL providers)
# DATABASE_URL=mysql://username:password@host:port/database_name

# Option 2: Use individual variables
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=student_medical_system

# Set to 'true' for cloud databases that require SSL
DB_SSL=true

# JWT Secret (REQUIRED - generate a strong random string for production)
JWT_SECRET=your_jwt_secret_here_change_this

# Application Settings
NEXT_PUBLIC_APP_NAME=Student Medical Records System
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Session Secret (generate a strong random string for production)
SESSION_SECRET=your_session_secret_here_change_this

# File Upload Settings
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=.xlsx,.xls

# Environment
NODE_ENV=development
